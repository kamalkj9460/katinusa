  {%- comment %}</locksmith:812e>{% endcomment -%}
  {% if product.featured_image.size > 0 %}
    {% for image in product.images limit:3 %}
      {%- comment %}<locksmith:b77f>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta property="og:image" content="https:{{ image.src | product_img_url: '600x' }}">{% endif -%}
